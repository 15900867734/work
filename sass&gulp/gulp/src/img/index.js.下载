    //右侧浮动菜单
    $(function () {

        $("#right_navi_1_login").hover(function () {
            $(this).animate({
                width: "86px",
                backgroundPositionX: "-31px",
                backgroundPositionY: "0"
            });
        }, function () {
            $(this).animate({
                width: "31px",
                backgroundPositionX: "0",
                backgroundPositionY: "0"
            });
        });

        $("#right_navi_1_user").hover(function () {
            $(this).animate({
                width: "86px",
                backgroundPositionX: "-31px",
                backgroundPositionY: "0"
            });
        }, function () {

            $(this).animate({
                width: "31px",
                backgroundPositionX: "0",
                backgroundPositionY: "0"
            });
        });

        $("#right_navi_3_newscame").hover(function () {
            $(this).animate({
                width: "86px",
                backgroundPositionX: "-31px",
                backgroundPositionY: "0"
            });
            $("#right_navi_news_menu").show();
        }, function () {
            $("#right_navi_news_menu").hide();
            $(this).animate({
                width: "31px",
                backgroundPositionX: "0",
                backgroundPositionY: "0"
            });
        });

        $("#right_navi_news_menu").hover(function () {
            $(this).show();
            $("#right_navi_3_newscame").animate({
                width: "86px",
                backgroundPositionX: "-31px",
                backgroundPositionY: "0"
            }, 100);
        }, function () {
            $(this).hide();
            $("#right_navi_3_newscame").animate({
                width: "31px",
                backgroundPositionX: "0",
                backgroundPositionY: "0"
            });
        });

        $("#right_navi_2_cart").hover(function () {
            $(this).animate({
                width: "86px",
                backgroundPositionX: "-31px",
                backgroundPositionY: "0"
            });
        }, function () {
            $(this).animate({
                width: "31px",
                backgroundPositionX: "0",
                backgroundPositionY: "0"
            });
        });

        $("#right_navi_3_news").hover(function () {
            $(this).animate({
                width: "86px",
                backgroundPositionX: "-31px",
                backgroundPositionY: "0"
            });
        }, function () {
            $(this).animate({
                width: "31px",
                backgroundPositionX: "0",
                backgroundPositionY: "0"
            });
        });

        $("#right_navi_4_points").hover(function () {
            $(this).animate({
