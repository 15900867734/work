$(document).ready(function () {
    //顶部广告加载
    var top_ad = $(".top_ad");
    top_ad.slideDown();
    $(".top_ad_close").click(function () {
        top_ad.slideUp();
    });
    //	setTimeout(function(){
    //		top_ad.slideUp();
    //	}, 6000)

    //左侧浮动导航
    function getTop() {
        var top = $(document).scrollTop();
        if (top > 1080) {
            $(".fixed_box").show(0);
        } else {
            $(".fixed_box").hide(0);
        }
        setTimeout(getTop);

        var area_height = $(document).scrollTop();
        if (area_height < 1109) {
            $(".fixed_box h3").removeClass("active")
        } else {
            $(".fixed_floor a:first-child").removeClass("active")
        };
        if (area_height > 1109) {
            $(".fixed_floor a:first-child").addClass("active");
            $(".fixed_box h3").addClass("active")
        } else {
            $(".fixed_floor a:first-child").removeClass("active")
        };
        if (area_height > 1373) {
            $(".fixed_floor a:nth-child(2)").addClass("active").siblings(".fixed_floor a").removeClass("active");
        } else {
            $(".fixed_floor a:nth-child(2)").removeClass("active")
        };
        if (area_height > 1821) {
            $(".fixed_floor a:nth-child(3)").addClass("active").siblings(".fixed_floor a").removeClass("active");
        } else {
            $(".fixed_floor a:nth-child(3)").removeClass("active")
        };
        if (area_height > 2359) {
            $(".fixed_floor a:nth-child(4)").addClass("active").siblings(".fixed_floor a").removeClass("active");
        } else {
            $(".fixed_floor a:nth-child(4)").removeClass("active")
        };
        if (area_height > 2797) {
            $(".fixed_floor a:nth-child(5)").addClass("active").siblings(".fixed_floor a").removeClass("active");
        } else {
            $(".fixed_floor a:nth-child(5)").removeClass("active")
        };
        if (area_height > 3325) {
            $(".fixed_floor a:nth-child(6)").addClass("active").siblings(".fixed_floor a").removeClass("active");
        } else {
            $(".fixed_floor a:nth-child(6)").removeClass("active")
        };
        if (area_height > 3754) {
            $(".fixed_floor a:nth-child(7)").addClass("active").siblings(".fixed_floor a").removeClass("active");
        } else {
            $(".fixed_floor a:nth-child(7)").removeClass("active")
        };
        if (area_height > 4283) {
            $(".fixed_floor a:nth-child(8)").addClass("active").siblings(".fixed_floor a").removeClass("active");
        } else {
            $(".fixed_floor a:nth-child(8)").removeClass("active")
        };
        if (area_height > 4706) {
            $(".fixed_floor a:nth-child(9)").addClass("active").siblings(".fixed_floor a").removeClass("active");
        } else {
            $(".fixed_floor a:nth-child(9)").removeClass("active")
        };
        if (area_height > 5205) {
            $(".fixed_floor a:nth-child(10)").addClass("active").siblings(".fixed_floor a").removeClass("active");
        } else {
            $(".fixed_floor a:nth-child(10)").removeClass("active")
        };
        if (area_height > 150) {
            $(".top_box").slideDown();
            $(".city_body").css("display", "none")

        } else {
            $(".top_box").slideUp();
            $(".city_body").css("display", "block");
        };
    }

    getTop();

    $(function () {
        $("#floor_01").click(function () {
            $("html,body").animate({ scrollTop: 1205 }, 1000);
            return false;
        });
        $("#floor_02").click(function () {
            $("html,body").animate({ scrollTop: 1425 }, 1000);
            return false;
        });
        $("#floor_03").click(function () {
            $("html,body").animate({ scrollTop: 1851 }, 1000);
            return false;
        });
        $("#floor_04").click(function () {
            $("html,body").animate({ scrollTop: 2389 }, 1000);
            return false;
        });
        $("#floor_05").click(function () {
            $("html,body").animate({ scrollTop: 2827 }, 1000);
            return false;
        });
        $("#floor_06").click(function () {
            $("html,body").animate({ scrollTop: 3355 }, 1000);
            return false;
        });
        $("#floor_07").click(function () {
            $("html,body").animate({ scrollTop: 3784 }, 1000);
            return false;
        });
        $("#floor_08").click(function () {
            $("html,body").animate({ scrollTop: 4333 }, 1000);
            return false;
        });
        $("#floor_09").click(function () {
            $("html,body").animate({ scrollTop: 4736 }, 1000);
            return false;
        });
        $("#floor_10").click(function () {
            $("html,body").animate({ scrollTop: 5275 }, 1000);
            return false;
        });
    });
    //轮播
    $(".main_visual").hover(function () {
        $("#btn_prev,#btn_next").fadeIn()
    }, function () {
        $("#btn_prev,#btn_next").fadeOut()
    })
    $dragBln = false;
    $(".main_image").touchSlider({
        flexible: true,
        speed: 200,
        btn_prev: $("#btn_prev"),
        btn_next: $("#btn_next"),
        paging: $(".flicking_con a"),
        counter: function (e) {
            $(".flicking_con a").removeClass("on").eq(e.current - 1).addClass("on");
        }
    });
    $(".main_image").bind("mousedown", function () {
        $dragBln = false;
    })
    $(".main_image").bind("dragstart", function () {
        $dragBln = true;
    })
    $(".main_image a").click(function () {
        if ($dragBln) {
            return false;
        }
    })
    timer = setInterval(function () { $("#btn_next").click(); }, 5000);
    $(".main_visual").hover(function () {
        clearInterval(timer);
    }, function () {
        timer = setInterval(function () { $("#btn_next").click(); }, 5000);
    })
    $(".main_image").bind("touchstart", function () {
        clearInterval(timer);
    }).bind("touchend", function () {
        timer = setInterval(function () { $("#btn_next").click(); }, 5000);
    });


    //背景形式的轮播
    $(".prev,.next").hover(function () {
        $(this).stop(true, false).fadeTo("show", 0.9);
    }, function () {
        $(this).stop(true, false).fadeTo("show", 0.4);
    });

    $(".banner-box").slide({
        titCell: ".hd ul",
        mainCell: ".bd ul",
        effect: "fold",
        interTime: 3500,
        delayTime: 500,
        autoPlay: true,
        autoPage: true,
        trigger: "click"
    });

    //易办公场景滚动
    $('#element_id').cxScroll({
        direction: 'right',
        step: 1
    }, function (api) {
        Api = api;
    });


    //导航菜单
    $(function () {
        $(".list_body .categories_title").hover(function () {
            $(".list_body .categories_one").show();
        }, function () {
            $(".list_body .categories_one").hide();
        });
        $(".list_body .categories_one").children(".categories_one_item").hover(function () { //一级导航悬浮
            $(this).addClass("hover").siblings(".categories_one_item").removeClass("hover");
            var index = $(this).index();
            $(".list_body .categories_one").show();
            $(".list_body #index_menus_sub").children(".categories_two_item").hide();
            $(".list_body #index_menus_sub").children(".categories_two_item").eq(index).show();
        }, function () {
            $(".list_body #index_menus_sub").children(".categories_two_item").hide();
            $(".list_body .categories_one").hide();
            $(this).removeClass("hover");
        });
        $(".list_body #index_menus_sub").children(".categories_two_item").hover(function () { //二级导航悬浮
            var index = $(this).index();
            $(this).show();
            $(".list_body .categories_one").show();
            $(".list_body .categories_one").children(".categories_one_item").eq(index).addClass("hover");
        }, function () {
            $(this).hide();
            $(".list_body .categories_one").children(".categories_one_item").removeClass("hover");
            $(".list_body .categories_one").hide();
        });

        $(".categories_one").children(".categories_one_item").hover(function () { //一级导航悬浮
            $(this).addClass("hover").siblings(".categories_one_item").removeClass("hover");
            var index = $(this).index();
            $("#index_menus_sub").children(".categories_two_item").hide();
            $("#index_menus_sub").children(".categories_two_item").eq(index).show();
        }, function () {
            $("#index_menus_sub").children(".categories_two_item").hide();
            $(this).removeClass("hover");
        });

        $("#index_menus_sub").children(".categories_two_item").hover(function () { //二级导航悬浮
            var index = $(this).index();
            $(this).show();
            $(".categories_one").children(".categories_one_item").eq(index).addClass("hover");
        }, function () {
            $(this).hide();
            $(".categories_one").children(".categories_one_item").removeClass("hover");
        });
    });
    //我的易优百
    $(function () {

        $(".customer_service_list").hover(function () {
            $(".customer_service_tag").addClass("hover");
            $(".customer_service_list").show();
        }, function () {
            $(".customer_service_list").hide();
            $(".customer_service_tag").removeClass("hover");
        });
        $(".customer_service_tag").hover(function () {
            $(".customer_service_list").show();
        }, function () {
            $(".customer_service_list").hide();
            $(".customer_service_tag").removeClass("hover");
        });
        $(".my_ey100_tag").hover(function () {
            $(".my_ey100_list").show();
        }, function () {
            $(".my_ey100_list").hide();
            $(".my_ey100_tag").removeClass("hover");
        });
        $(".my_ey100_list").hover(function () {
            $(".my_ey100_tag").addClass("hover");
            $(".my_ey100_list").show();
        }, function () {
            $(".my_ey100_list").hide();
            $(".my_ey100_tag").removeClass("hover");
        });
        $(".my_ey100_messages_tag").hover(function () {
            $(".my_ey100_messages_list").show();
            $(".my_ey100_messages_tag span").css("color", "#fff")
        }, function () {
            $(".my_ey100_messages_list").hide();
            $(".my_ey100_messages_tag").removeClass("hover");
            $(".my_ey100_messages_tag span").css("color", "#ff0101")
        });
        $(".my_ey100_messages_list").hover(function () {
            $(".my_ey100_messages_tag").addClass("hover");
            $(".my_ey100_messages_list").show();
            $(".my_ey100_messages_tag span").css("color", "#fff")
        }, function () {
            $(".my_ey100_messages_list").hide();
            $(".my_ey100_messages_tag").removeClass("hover");
            $(".my_ey100_messages_tag span").css("color", "#ff0101")
        });
    });

    //购物车
    $(function () {
        $(".shoppingcart_show").hover(function () {
            $(".shoppingcart_show_box").show();
            $(this).addClass("hover");
        }, function () {
            $(".shoppingcart_show_box").hide();
            $(this).removeClass("hover");
        });
        $(".shoppingcart_show_box").hover(function () {
            $(".shoppingcart_show_box").show();
            $(".shoppingcart_show").addClass("hover");
        }, function () {
            $(".shoppingcart_show_box").hide();
            $(".shoppingcart_show").removeClass("hover");
        });
    });

    //城市选择
    $(function () {
        $(".choose_city").click(function () {
            $(".city_box").show();
        });
        $(".close_city_box").click(function () {
            $(".city_box").hide();
        });
    });

