    $(".commodity_box_list a:nth-child(4n)").css("border-right", "0");
    $(".commodity_box_list a:nth-child(5)").css("border-bottom", "0");
    $(".commodity_box_list a:nth-child(6)").css("border-bottom", "0");
    $(".commodity_box_list a:nth-child(7)").css("border-bottom", "0");
    $(".commodity_box_list a:nth-child(8)").css("border-bottom", "0");
    $(".categories_two>div:nth-child(1)").css({
